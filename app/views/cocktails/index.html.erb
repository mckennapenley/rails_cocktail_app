
<main>
  <section class = "py-5 text-center container">
    <div class ="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class = fw-light> Find your next drink</h1>
        <p class = "lead text-muted">"lorem ipsum"
        </p>
        <p>
          <a class = "btn btn-primary my-2" id="search_by_name_btn">Search by name</a>
          <a class = "btn btn-outline-primary my-2" id="search_by_ingredient_btn">Search by ingredient</a>
