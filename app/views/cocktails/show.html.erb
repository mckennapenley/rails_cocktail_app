      <%= @cocktail["strMeasure14"] %>

      <%= @cocktail["strIngredient15"] %>
      <%= @cocktail["strMeasure15"] %>

      <% if current_user.present? %>
        <div id="favorite_form">
          <% if current_user.favorited_api_cocktail?(@cocktail["idDrink"]) %>
            <%= render 'shared/unfavorite' , api_id: @cocktail["idDrink"], cocktail: @cocktail %>
          <% else %>
            <%= render 'shared/favorite' , api_id: @cocktail["idDrink"], cocktail: @cocktail %>
          <% end %>
        </div>
      <% end %>

    <% else %>
      <%= @cocktail.instructions%>

      <%= @cocktail.ingredient1%>
      <%= @cocktail.ingredient1%>

      <%= @cocktail.ingredient2%>
      <%= @cocktail.measure2 %>

