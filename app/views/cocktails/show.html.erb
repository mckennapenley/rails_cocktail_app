      <%= @cocktail.measure9 %>

      <%= @cocktail.ingredient10 %>
      <%= @cocktail.measure10 %>

      <%= @cocktail.ingredient11 %>
      <%= @cocktail.measure11 %>

      <%= @cocktail.ingredient12 %>
      <%= @cocktail.measure12 %>

      <%= @cocktail.ingredient13 %>
      <%= @cocktail.measure13 %>

      <%= @cocktail.ingredient14 %>
      <%= @cocktail.measure14 %>

      <%= @cocktail.ingredient15 %>
      <%= @cocktail.measure15 %>

      <% if current_user.present? %>
        <div id="favorite_form">
          <% if current_user.favorited?(@cocktail.id) %>
            <%= render 'shared/unfavorite_user_submitted' , cocktail: @cocktail %>
          <% else %>
            <%= render 'shared/favorite_user_submitted' , cocktail: @cocktail %>
          <% end %>
        </div>
      <% end %>
    <% end %>
</main>

 
    
