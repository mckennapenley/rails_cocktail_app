

</main>
<div class ="album py-5 bg-light">
  <h1 class="text-center mb-5"> Search Results </h1>
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
      <% @api_cocktails.each do |cocktail| %>
      <div class="col">
          <div class="card shadow-sm">
            <img class ="bd-placeholder-img card-img-top" width="100%" height ="100%" src="<%= cocktail["strDrinkThumb"] %>" aria-label="Placeholder: Thumbnail">
            <div class="card-body">
              <p class="card-text">
                <%= cocktail["strDrink"] %>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <input type="button" class="btn btn-sm btn-outline-secondary" onclick= "location.href = '<%= cocktail_path(cocktail["idDrink"]) %>';" value="View" />
                </div>
                 <div id="favorite_form">
                  <% if current_user.favorited?(cocktail["idDrink"]) %>
                    <%= render 'shared/unfavorite', api_id: cocktail["idDrink"], cocktail: cocktail %>
                  <% else %>
                    <%= render 'shared/favorite', api_id: cocktail["idDrink"], cocktail: cocktail %>
                  <% end %>
                </div>

              </div>
            </div>
          </div>

        </div>
        <% end %>
    </div>
  </div>
</div>
</main>


